{% extends 'default.html.twig' %}

{% block stylesheets %}
  {% if page.home() %}
    {% do assets.addCss('theme://css/home.css',105) %}
  {% endif %}
  {{ parent() }}
{% endblock %}

{% set content = page.content|slice(page.summary|length) %}

{% block content %}
<div id="body-inner">

  <div id="summary">
    <h1>{{ page.title }}</h1>
    {{ page.summary|raw }}
  </div>

  <div id="content">
	{{ content|raw }}
  </div>
  
  <div class="griddy">
    {% for item in page.collection %}
        <a href="{{ item.url }}">
            {{ item.media.images|first|raw }}
            <h3>{{ item.title }}</h3>
            <p>{{ item.summary|raw }}</p>
        </a>
    {% endfor %}
  </div>
</div>
{% endblock %}

