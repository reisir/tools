{% extends 'partials/base.html.twig' %}

{% block content %}
<div id="body-inner">
    <h1>{{ page.title }}</h1>
    {{ page.content|raw }}
  	{% block extra %}{% endblock %}
</div>
{% endblock %}

{% block footer %}
  	{% include 'partials/footer.html.twig' %}
{% endblock %}

{% set progress = page.collection({'items':{'@root.descendants': ''}, 'filter': {'visible': true}, 'order': {'by': 'default', 'dir': 'asc'}}) %}
{% block navigation %}
{% if page.visible %}
	<div id="navigation">
	{% if not progress.isFirst(page.path) %}
	    <a class="nav nav-prev" href="{{ progress.nextSibling(page.path).url }}"> <i class="fa fa-chevron-left"></i></a>
	{% endif %}
	{% if not progress.isLast(page.path) %}
	    <a class="nav nav-next" href="{{ progress.prevSibling(page.path).url }}"><i class="fa fa-chevron-right"></i></a>
	{% endif %}
	</div>
{% endif %}
{% endblock %}